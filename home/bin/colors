#!/bin/bash

case $1 in
  6|12|24|36)
    break=4
    [[ $1 -gt 17 ]] && break=16
    for fgbg in 38 48 ; do
      for color in {0..255} ; do
        printf "\e[${fgbg};5;%sm %3s \e[0m" $color $color
        if [ $((($color + 1) % $1 )) == $break ] ; then
          echo ;
        fi
      done
      echo
    done
    ;;

  *)
    color(){
      for c; do
        printf '\e[48;5;%dm%03d ' $c $c
      done
      printf '\e[0m \n'
    }

  IFS=$' \t\n'
  color {0..15}
  for ((i=0;i<6;i++)); do
    color $(seq $((i*36+16)) $((i*36+51)))
  done
  color {232..255}
  ;;
esac

