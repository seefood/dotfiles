{
  "alwaysThinkingEnabled": true,
  "cleanupPeriodDays": 90,
  "enabledPlugins": {
    "ci-cd-pipeline-builder@claude-code-plugins-plus": true,
    "claude-mem@thedotmack": true,
    "code-review@claude-code-plugins": true,
    "commit-commands@claude-code-plugins": true,
    "context7@lefant-claude-code-plugins": true,
    "devops-automation@claude-code-templates": true,
    "elements-of-style@superpowers-marketplace": true,
    "episodic-memory@superpowers-marketplace": true,
    "feature-dev@claude-code-plugins": true,
    "formatter@claude-code-plugins-plus": true,
    "github-access@lefant-claude-code-plugins": true,
    "lefant@lefant-claude-code-plugins": true,
    "plugin-dev@claude-code-plugins": true,
    "pr-review-toolkit@claude-code-plugins": true,
    "ralph-wiggum@claude-code-plugins": true,
    "rpi@lefant-claude-code-plugins": true,
    "security-guidance@claude-code-plugins": true,
    "security-pro@claude-code-templates": true,
    "superpowers-developing-for-claude-code@superpowers-marketplace": true,
    "superpowers@superpowers-marketplace": true,
    "testing-suite@claude-code-templates": true
  },
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/play-sound.sh notification",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "if [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.js || \"$CLAUDE_TOOL_FILE_PATH\" == *.ts || \"$CLAUDE_TOOL_FILE_PATH\" == *.jsx || \"$CLAUDE_TOOL_FILE_PATH\" == *.tsx || \"$CLAUDE_TOOL_FILE_PATH\" == *.json || \"$CLAUDE_TOOL_FILE_PATH\" == *.css || \"$CLAUDE_TOOL_FILE_PATH\" == *.html ]]; then npx prettier --write \"$CLAUDE_TOOL_FILE_PATH\" 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.py ]]; then black \"$CLAUDE_TOOL_FILE_PATH\" 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.go ]]; then gofmt -w \"$CLAUDE_TOOL_FILE_PATH\" 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.rs ]]; then rustfmt \"$CLAUDE_TOOL_FILE_PATH\" 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.php ]]; then php-cs-fixer fix \"$CLAUDE_TOOL_FILE_PATH\" 2>/dev/null || true; fi",
            "type": "command"
          },
          {
            "command": "if [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.js || \"$CLAUDE_TOOL_FILE_PATH\" == *.ts || \"$CLAUDE_TOOL_FILE_PATH\" == *.jsx || \"$CLAUDE_TOOL_FILE_PATH\" == *.tsx ]]; then npx eslint \"$CLAUDE_TOOL_FILE_PATH\" --fix 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.py ]]; then pylint \"$CLAUDE_TOOL_FILE_PATH\" 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.rb ]]; then rubocop \"$CLAUDE_TOOL_FILE_PATH\" --auto-correct 2>/dev/null || true; fi",
            "type": "command"
          }
        ],
        "matcher": "Edit|MultiEdit"
      },
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/play-sound.sh done",
            "type": "command"
          },
          {
            "command": "if command -v osascript >/dev/null 2>&1; then osascript -e 'display notification \"Tool: $CLAUDE_TOOL_NAME completed\" with title \"Claude Code\"'; elif command -v notify-send >/dev/null 2>&1; then notify-send 'Claude Code' \"Tool: $CLAUDE_TOOL_NAME completed\"; fi",
            "type": "command"
          }
        ],
        "matcher": "*"
      },
      {
        "hooks": [
          {
            "command": "echo \"[$(date '+%Y-%m-%d %H:%M:%S')] File created: $CLAUDE_TOOL_FILE_PATH\" >> ~/.claude/changes.log",
            "type": "command"
          }
        ],
        "matcher": "Write"
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "bash .claude/scripts/validate-bash.sh",
            "type": "command"
          }
        ],
        "matcher": "Bash"
      }
    ],
    "SessionStart": [
    ],
    "Stop": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/play-sound.sh",
            "type": "command"
          }
        ],
        "matcher": ""
      },
      {
        "hooks": [
          {
            "command": "claudekit-hooks run check-todos",
            "type": "command"
          },
          {
            "command": "claudekit-hooks run self-review",
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ],
    "SubagentStop": [
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "claudekit-hooks run codebase-map",
            "type": "command"
          },
          {
            "command": "claudekit-hooks run thinking-level",
            "type": "command"
          },
          {
            "command": "npx vibe-log-cli analyze-prompt --silent --stdin",
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ]
  },
  "model": "haiku",
  "statusLine": {
    "padding": 0,
    "type": "command"
  }
}
