{
  "alwaysThinkingEnabled": false,
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/play-sound.sh notification",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/play-sound.sh done",
            "type": "command"
          }
        ],
        "matcher": "Edit|Write|MultiEdit"
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "bash .claude/scripts/validate-bash.sh"
          }
        ],
        "matcher": "Bash"
      }
    ],
    "SessionStart": [
    ],
    "Stop": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/play-sound.sh",
            "type": "command"
          }
        ],
        "matcher": ""
      },
      {
        "hooks": [
          {
            "command": "claudekit-hooks run check-todos",
            "type": "command"
          },
          {
            "command": "claudekit-hooks run self-review",
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ],
    "SubagentStop": [
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "claudekit-hooks run codebase-map",
            "type": "command"
          },
          {
            "command": "claudekit-hooks run thinking-level",
            "type": "command"
          },
          {
            "command": "npx vibe-log-cli analyze-prompt --silent --stdin",
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ]
  },
  "model": "haiku",
  "statusLine": {
    "command": "npx vibe-log-cli statusline --with-usage",
    "fancycommand": "bash ~/.claude/statusline-comprehensive.sh",
    "faultycommand": "npx -y @owloops/claude-powerline@latest --style=powerline",
    "padding": 0,
    "type": "command"
  }
}
